@model DapperNight.Dtos.ProductDtos.CreateProductDto
@{
    Layout = null;
}


<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br /><br />
    <form method="post">
        <label>Ürün Adı</label>
        <input type="text" asp-for="Name" class="form-control" />
        <br /> 
        <label>Ürün Miktarı</label>
        <input type="text" asp-for="Quantity" class="form-control" />
        <br /> 
        <label>Ürün Fiyatı</label>
        <input type="text" asp-for="Price" class="form-control" />
        <br />
        <label>Kategori Id</label>
        <input type="text" asp-for="CategoryId" class="form-control" />
        <br />

        <button class="btn btn-primary">Ürünü Oluştur</button>
    </form>

</div>
